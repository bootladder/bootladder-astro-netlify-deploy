---
import Picture from '~/components/core/Picture.astro';
let tdglogo = await import('~/assets/images/TDGLogo-1-768x469.png')
let fordlogo = await import('~/assets/images/Ford_logo_flat.svg-1536x589.png')
let kinoologo = await import('~/assets/images/kinoo-logo-hq-300x140.png')
let resideologo = await import('~/assets/images/Resideo-360x240.webp')


---

<div class="px-4 py-8 md:py-16 sm:px-6 mx-auto md:px-24 lg:px-8 lg:py-20 max-w-6xl">
	<div class="grid grid-cols-2 row-gap-8 md:grid-cols-4">
        <img
        src={tdglogo.default.src} 
        style="width:400px;height:auto"
        />
        <img
        src={fordlogo.default.src} 
        style="width:100px;height:auto"
		class="border-r"
        />
        <img
        src={kinoologo.default.src} 
        style="width:100px;height:auto"
		class="border-r"
        />
        <img
        src={resideologo.default.src} 
        style="width:100px;height:auto"
		class="border-r"
        />
	</div>
</div>
