---
let banner = await import('~/assets/images/banner.svg')
let herobackground = await import('~/assets/images/herobackground.png')

---

<section>
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="pb-10 md:pb-16">
                <div class="bg-[#181818]">
                    <image
                    src={banner.default}
                    />
                </div>
				<div class="mx-auto">
					<h1 class="text-[50px] font-bold text-[#f5f5f5] mb-8 dark:text-slate-400">
						We Help IoT Companies, From Hardware To The Cloud
					</h1>
					<div class="max-w-none px-6 flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
						<div class="relative w-full sm:w-auto">
                            <image class="w-full"
                            src={herobackground.default.src}
                            />
							<a
								class="absolute top-1/2 left-1/4 btn  text-[30px] font-bold bg-[#181818] text-[#E85C5C] hover:bg-gray-800 "
								href="#features">Let's Talk Shop</a
							>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
