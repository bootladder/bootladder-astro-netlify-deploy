---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CardGrid from '~/components/widgets/CardGrid.astro';
import BigBullets from '~/components/widgets/BigBullets.astro';
import Steps from '~/components/widgets/Steps.astro';
import Testimonial from '~/components/widgets/Testimonial.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import BigList from '~/components/widgets/BigList.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<Hero />
	<CardGrid />
	<BigBullets />
	<Testimonial />
	<BigList />
	<HighlightedPosts />
	<!-- <FAQs /> -->
	<!-- <Steps /> -->
	<Stats />
	<CallToAction />
</Layout>
