---
import { getPermalink, getBlogPermalink, getHomePermalink } from '~/utils/permalinks'; 
---

<header
	class="sticky top-0 z-40 flex-none mx-auto w-full bg-gray-200 md:bg-gray-200/90 dark:bg-slate-900 dark:md:bg-slate-900/90 md:backdrop-blur-sm border-b dark:border-b-0"
>
	<div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
		<div class="flex justify-between">
			<a class="flex items-center" href={getHomePermalink()}>
				<span class="self-center ml-2 text-2xl font-bold text-blue-900 whitespace-nowrap dark:text-white">
					Bootladder Engineering</span
				>
			</a>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-screen md:h-auto"
			aria-label="Main navigation"
			id="menu"
		>
			<ul
				class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
			>
				<li> <a class="headernavbutton" href="/firmware/" >Firmware </a> </li>
				<li> <a class="headernavbutton" href="/firmware/" >Testing </a> </li>
				<li> <a class="headernavbutton" href="/firmware/" >Case Studies </a> </li>
				<li> <a class="headernavbutton" href="/firmware/" >Blog </a> </li>
				<li> <a class="headernavbutton" href="/firmware/" >About </a> </li>
			</ul>
		</nav>
	</div>
</header>
